<%- include header %>

<% tags.forEach(tag => {%>
  <li>Tag: <a href="/tags/<%= tag.name %>" class="badge badge-primary badge-pill"><%= tag.name %> <%= tag.posts.length %></a><a href="/tags/<%= tag.name %>/delete" class="badge badge-danger">delete this tag</a>
<ul>
  <% tag.posts.forEach(post => {%>

<li>title: <%= post.title %> body: <%= post.body %></li><a href="/posts/<%= post._id %>/delete"> delete </a>

    <%}) %>
  </ul>
</li>
<%}) %>

<form class="" action="/tags/add" method="post">
  <label for="name">
    name:<input type="text" name="name" value="">
  </label>
  <button type="submit">submit</button>
</form>

<%- include footer %>
