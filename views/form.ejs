
<h2>Switching to express</h2>
<h3>Add a post</h3>

  <% if(post !== undefined) { %>
  <form method="post">
  <label for="Title">Title
    <input type="text" name="title" value="<%= post.title %>">
  </label>
  <label for="Body">Body
    <input type="text" name="body" value="<%= post.body %>">
  </label>

  <% }else{ %>
  <form method="post" action="/posts/add">
  <label for="Title">Title
    <input type="text" name="title">
  </label>
  <label for="Body">Body
      <textarea name="body" rows="8" cols="80"></textarea>
  </label>
  <label for="tag">Tag
    <% if(tags !== undefined){ %>
    <% tags.forEach(tag => {%>
      <%= tag.name %><input type="checkbox" value="<%= tag._id %>" name="tag">
    <%}) %>
    <%}%>

  </label>
  <% } %>
  <button type="submit" name="button">Add a post</button>
</form>
